<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	
	html {
		font-family: 'Inter', system-ui, sans-serif;
		background-size: 224px;
		color: #333;
		scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		position: relative;
		overflow-x: hidden;
	}
	
	.glassmorphism {
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.18);
		box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
	}
	
	.card-glassmorphism {
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(5px);
		-webkit-backdrop-filter: blur(5px);
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.18);
		box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.05);
		transition: all 0.3s ease;
	}
	
	.card-glassmorphism:hover {
		transform: translateY(-5px);
		box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.1);
	}
	
	/* Animated background */
	.stars, .stars2, .stars3 {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		opacity: 0.3;
	}
	
	.stars {
		background: transparent url("/stars.png") repeat top center;
		z-index: -3;
	}
	
	.stars2 {
		background: transparent url("/stars2.png") repeat top center;
		z-index: -2;
		animation: move-twink-back 200s linear infinite;
	}
	
	.stars3 {
		background: transparent url("/stars3.png") repeat top center;
		z-index: -1;
		animation: move-twink-back 150s linear infinite;
	}
	
	@keyframes move-twink-back {
		from {background-position: 0 0;}
		to {background-position: -10000px 5000px;}
	}
	
	/* Responsive menu */
	@media (max-width: 768px) {
		#menu.active {
			display: block;
		}
	}

  /* Gradient text */
  .gradient-text {
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-image: linear-gradient(to right, #8B5CF6, #EC4899);
  }

  /* Button styles */
  .btn {
    @apply px-6 py-2 rounded-full transition-all duration-300;
  }

  .btn-primary {
    @apply bg-gradient-to-r from-primary to-secondary text-white hover:shadow-lg hover:shadow-primary/20;
  }

  .btn-secondary {
    @apply bg-white text-primary border border-primary/20 hover:border-primary hover:shadow-lg hover:shadow-primary/10;
  }

  .btn-outline {
    @apply border border-gray-300 text-gray-700 hover:border-primary hover:text-primary transition-colors;
  }

  /* Animation classes */
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 1s ease-out forwards;
  }

  @keyframes fadeUp {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slide-right {
    opacity: 0;
    transform: translateX(-50px);
    animation: slideRight 1s ease-out forwards;
  }

  @keyframes slideRight {
    from { 
      opacity: 0;
      transform: translateX(-50px);
    }
    to { 
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-slide-left {
    opacity: 0;
    transform: translateX(50px);
    animation: slideLeft 1s ease-out forwards;
  }

  @keyframes slideLeft {
    from { 
      opacity: 0;
      transform: translateX(50px);
    }
    to { 
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-width {
    width: 0;
    animation: expandWidth 1.5s ease-out forwards;
  }

  @keyframes expandWidth {
    from { width: 0; }
    to { width: 6rem; }
  }

  .animate-progress {
    width: 0 !important;
    animation: expandProgress 1.5s ease-out forwards;
  }

  @keyframes expandProgress {
    from { width: 0 !important; }
    to { width: var(--width) !important; }
  }

  /* Animation delays */
  .animation-delay-100 {
    animation-delay: 0.1s;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-500 {
    animation-delay: 0.5s;
  }

  /* Line clamp utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
	// Mobile menu toggle
	document.addEventListener('DOMContentLoaded', () => {
		const menuToggle = document.getElementById('menu-toggle');
		const menu = document.getElementById('menu');
		
		menuToggle?.addEventListener('click', () => {
			menu?.classList.toggle('active');
			menu?.classList.toggle('hidden');
		});

    // Set progress bar widths for animation
    const progressBars = document.querySelectorAll('.animate-progress');
    progressBars.forEach(bar => {
      const width = bar.style.width;
      bar.style.setProperty('--width', width);
    });
	});
</script>
