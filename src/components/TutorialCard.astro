---
interface Props {
  title: string;
  description: string;
  image: string;
  url: string;
  level?: string;
  duration?: string;
}

const { title, description, image, url, level, duration } = Astro.props;
---

<article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300">
  <div class="relative">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    {level && duration && (
      <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/70 to-transparent">
        <div class="flex items-center justify-between">
          {level && (
            <span class="bg-gradient-to-r from-blue-400 to-blue-500 text-white text-xs font-bold px-3 py-1 rounded-full">
              {level}
            </span>
          )}
          {duration && (
            <span class="text-white text-xs font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {duration}
            </span>
          )}
        </div>
      </div>
    )}
  </div>
  <div class="p-6">
    <h3 class="text-lg font-heading font-bold mb-2 line-clamp-2 hover:text-primary transition-colors">
      <a href={url}>{title}</a>
    </h3>
    <p class="text-gray-700 mb-4 line-clamp-3 text-sm">{description}</p>
    <a href={url} class="inline-flex items-center text-primary font-medium hover:underline text-sm">
      Xem chi tiáº¿t
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  </div>
</article>
