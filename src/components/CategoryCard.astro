---
interface Props {
  title: string;
  description: string;
  icon: string;
  url: string;
  color: string;
}

const { title, description, icon, url, color } = Astro.props;

const gradientMap = {
  'purple': 'from-purple-400 to-indigo-500',
  'blue': 'from-blue-400 to-cyan-500',
  'green': 'from-green-400 to-emerald-500',
  'orange': 'from-orange-400 to-amber-500',
  'pink': 'from-pink-400 to-rose-500',
};

const gradient = gradientMap[color] || 'from-primary to-secondary';
---

<a href={url} class="block h-full">
  <div class="card-glassmorphism overflow-hidden transition-all hover:shadow-xl hover:-translate-y-1 h-full flex flex-col">
    <div class={`h-2 bg-gradient-to-r ${gradient}`}></div>
    <div class="p-6 flex-1 flex flex-col">
      <div class={`w-12 h-12 rounded-full bg-gradient-to-br ${gradient} flex items-center justify-center text-white mb-4`}>
        <span set:html={icon} />
      </div>
      <h3 class="text-xl font-heading font-bold mb-2">{title}</h3>
      <p class="text-gray-700 flex-1">{description}</p>
    </div>
  </div>
</a>
